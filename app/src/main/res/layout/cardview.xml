<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8FF"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        xmlns:cardview="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="#ADD8E6"
        cardview:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/id_transaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="ID Transaksi :"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/no_tujuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_transaksi"
                android:layout_marginLeft="10dp"
                android:text="No. Tujuan :"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/provider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/no_tujuan"
                android:text="Provider :"
                android:textColor="#F0000000"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/nominal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/provider"
                android:text="Nominal :"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nominal"
                android:text="Tanggal :"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
